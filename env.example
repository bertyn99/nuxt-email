# Email Module Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# PROVIDER API KEYS
# =============================================================================

# Resend (https://resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Mailgun (https://mailgun.com)
MAILGUN_API_KEY=key-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAILGUN_DOMAIN=mg.yourdomain.com

# Brevo (formerly Sendinblue) (https://brevo.com)
BREVO_API_KEY=xkeysib-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Mailtrap (https://mailtrap.io) - for testing
MAILTRAP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAILTRAP_INBOX_ID=123456

# =============================================================================
# SMTP CONFIGURATION
# =============================================================================

# SMTP Server (for generic SMTP or local development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Alternative SMTP configurations:
# Gmail OAuth2
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AWS SES SMTP
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=AKIAIOSFODNN7EXAMPLE
# SMTP_PASS=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# =============================================================================
# EMAIL DEFAULTS
# =============================================================================

# Default sender email (required)
EMAIL_FROM=noreply@yourdomain.com

# Default reply-to address (optional)
EMAIL_REPLY_TO=support@yourdomain.com

# Your site URL for email templates
PUBLIC_SITE_URL=https://yourdomain.com

# =============================================================================
# SECURITY & LIMITS
# =============================================================================

# Maximum attachment size in bytes (default: 10MB)
# MAX_ATTACHMENT_SIZE=10485760

# Maximum recipients per email (default: 50)
# MAX_RECIPIENTS=50

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Node environment
NODE_ENV=development

# Enable client-side email sending (disabled in production by default)
# EMAIL_CLIENT_ENABLED=true

# Custom bridge endpoint (default: /_email/bridge/send)
# EMAIL_BRIDGE_ENDPOINT=/_email/bridge/send

# =============================================================================
# PROVIDER-SPECIFIC CONFIGURATIONS
# =============================================================================

# AWS SES (if using AWS SDK instead of SMTP)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# Google OAuth2 (for Gmail SMTP)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# =============================================================================
# STRATEGY & RELIABILITY
# =============================================================================

# Circuit breaker failure threshold (default: 5)
# CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Circuit breaker cooldown in milliseconds (default: 60000)
# CIRCUIT_BREAKER_COOLDOWN_MS=60000

# Retry max attempts (default: 3)
# EMAIL_RETRY_MAX_ATTEMPTS=3

# Retry backoff in milliseconds (default: 1000)
# EMAIL_RETRY_BACKOFF_MS=1000

# Rate limiting per minute (optional)
# EMAIL_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# TEMPLATE CONFIGURATION
# =============================================================================

# Template directory (default: emails/)
# EMAIL_TEMPLATES_DIR=emails

# Layout directory (default: emails/layouts/)
# EMAIL_LAYOUT_DIR=emails/layouts

# Enable template caching (default: true)
# EMAIL_TEMPLATE_CACHE=true

# =============================================================================
# OBSERVABILITY
# =============================================================================

# Log level for email operations
# EMAIL_LOG_LEVEL=info

# Enable detailed email logging
# EMAIL_DEBUG=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env files to version control
# 3. Use different API keys for development and production
# 4. For production, ensure all required providers are configured
# 5. The devCatcher provider is automatically enabled in non-production environments
# 6. SMTP configuration is optional if using API-based providers
# 7. All boolean values should be 'true' or 'false' (strings)
# 8. Numeric values should be plain numbers without quotes
